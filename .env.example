# Flask App Configuration
FLASK_APP=run.py
FLASK_ENV=development # Use 'production' for deployment
SECRET_KEY='YOUR_VERY_STRONG_RANDOM_FLASK_SECRET_KEY' # Generate one: python -c 'import secrets; print(secrets.token_hex(16))'

# OpenAI API Configuration
OPENAI_API_KEY='YOUR_OPENAI_API_KEY'
OPENAI_EMBEDDING_MODEL='text-embedding-ada-002' # Or another model supported by the API version
OPENAI_CHAT_MODEL='gpt-3.5-turbo' # Or another model like gpt-4

# PostgreSQL Database Configuration
# Example: postgresql://user:password@hostname:port/database_name
# Ensure user has permissions on the database and pgvector is enabled
DATABASE_URL='postgresql://namwoo_user:your_db_password@localhost:5432/namwoo_db'

# WooCommerce API Configuration
WOOCOMMERCE_URL='https://yourstore.com' # Your WooCommerce store URL (use https://)
WOOCOMMERCE_KEY='YOUR_WOOCOMMERCE_CONSUMER_KEY'
WOOCOMMERCE_SECRET='YOUR_WOOCOMMERCE_CONSUMER_SECRET'
WOOCOMMERCE_API_VERSION='wc/v3' # Usually wc/v3
WOOCOMMERCE_TIMEOUT=30 # Timeout in seconds for WooComm API calls

# Scheduler settings
SYNC_INTERVAL_MINUTES=60 # How often to run the background sync (set to 0 to disable automatic sync)

# Optional: Webhook Secret (Uncomment and set if you want basic header validation)
# DIALOGFLOW_WEBHOOK_SECRET='YOUR_SHARED_SECRET_WITH_DIALOGFLOW'

# Other settings
LOG_LEVEL=DEBUG # Set log level (DEBUG, INFO, WARNING, ERROR)
EMBEDDING_DIMENSION=1536 # Dimension of OpenAI's text-embedding-ada-002
PRODUCT_SEARCH_LIMIT=5 # Default number of products to return in searches

SUPPORT_BOARD_API_KEY='YOUR_SUPPORT_BOARD_API_KEY_SECRET'